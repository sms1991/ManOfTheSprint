@model PersonOfTheSprint.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register User";
}

<h2>Register</h2>

@using (Html.BeginForm("RegisterUser", "Register", FormMethod.Post))
{
    <p>
        @Html.Label("Email address:")
        @Html.TextBoxFor(x => x.Email, string.Empty)
        @Html.ValidationMessageFor(x => x.Email)
    </p>

    <p>
        @Html.Label("Password:")
        @Html.PasswordFor(x => x.Password)
        @Html.ValidationMessageFor(x => x.Password)
    </p>

    <p>
        @Html.Label("Re-enter password:")
        @Html.PasswordFor(x => x.ConfirmPassword)
        @Html.ValidationMessageFor(x => x.ConfirmPassword)
    </p>

    <input type="submit" value="Register User" />
}